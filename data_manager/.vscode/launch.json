    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "MONGO_DB_URL": "mongo",
                "MONGO_DB_PORT": "27017",
                "MONGO_DB_USERNAME": "admin",
                "MONGO_DB_PASSWORD": "password"
            }
        }
    ]
}